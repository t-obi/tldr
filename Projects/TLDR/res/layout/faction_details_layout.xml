<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/factions_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#dddddd"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/fractionDetailBanner"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/tldr_banner_mof" />

        <ImageView
            android:id="@+id/fractionDetailLogo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"
            android:src="@drawable/tldr_def_mini" />
    </FrameLayout>
    
	<TextView
            android:id="@+id/memberNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Members:"
            android:textAppearance="?android:attr/textAppearanceMedium" />
            
	<TextView
            android:id="@+id/memberNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <ListView
        android:id="@+id/list_fraction_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        />

</LinearLayout>